@page "/login"
@using AsgardeoBlazorServerSample.Shared
@using AsgardeoBlazorServerSample.Components.Layout
@layout GuestLayout

<div>
    <div>
        <img src="Assets/landing-bg.svg" alt="landing background" style="margin: 10px;">
    </div>
    <div>
        <div>
            <img src="Assets/msl-logo.png" alt="MSL Logo">
        </div>
        <div style="border: #fafafa solid 1px; padding: 42px 68px; border-radius: 10px; width: 450px;">
            <form class="space-y-6" action="#" method="POST">
                <input type="hidden" name="remember" value="true">
                <div class="space-y-4">
                    <div style="margin-bottom: 14px;">
                        <label for="email-address" class="sr-only">Email address</label>
                        <input 
                            id="email-address" 
                            name="email" 
                            type="email" 
                            autocomplete="email" 
                            required placeholder="Email address"
                        >
                    </div>
                    <div class="mt-4">
                        <label for="password" class="sr-only">Password</label>
                        <input 
                            id="password" 
                            name="password" 
                            type="password" 
                            autocomplete="current-password" 
                            required
                            placeholder="Password"
                        >
                    </div>
                </div>

                <div class="flex items-center justify-between">
                    <div class="flex items-center">
                        <input id="remember-me" name="remember-me" type="checkbox">
                        <label for="remember-me">
                            Remember me
                        </label>
                    </div>

                    <div class="text-sm">
                        <a href="#" style="color: #660000;">
                            Forgot password?
                        </a>
                    </div>
                </div>

                <div>
                    <button type="submit" style="background: #660000;">
                        Sign in
                    </button>
                </div>
            </form>

            <div class="mt-6">
                <div class="relative">
                    <div>
                        <span>
                            Or continue with
                        </span>
                    </div>
                </div>
                <div>                       
                    <div>
                        <AsgardeoLoginButton />
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

