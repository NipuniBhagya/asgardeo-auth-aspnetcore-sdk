@using Asgardeo.AspNetCore.Authenthentication.Services
@inject IAuthService AuthService
@rendermode InteractiveServer

<button 
    @onclick="SignIn" 
    style="background: #f1f1f1; color: black;" 
    class=" w-full inline-flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm bg-grey-500 text-sm font-medium text-gray-500 hover:bg-gray-50">
    Sign in with Asgardeo
</button>

@code {
    private async Task SignIn()
    {
        await AuthService.Login();
    }
}